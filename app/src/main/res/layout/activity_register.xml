<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CreateUserActivity">

<LinearLayout
        android:id="@+id/createUserLinearLayoutDatos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="25sp"
        android:layout_marginTop="200sp"
        android:layout_marginRight="25sp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="77dp">

        <!-- USUARIO CORREO -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/createUserMailLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/createUserMailInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/usuario_correo"
                android:inputType="textEmailAddress"
                android:singleLine="true" />
        </com.google.android.material.textfield.TextInputLayout>
        <!-- PASSWORD -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/createUserPassword1Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/createUserPassword1Input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/password"
                android:inputType="text|textPassword"
                android:singleLine="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- REPEAT PASSWORD -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/createUserPassword2Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20sp">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/createUserPassword2Input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/password"
                android:inputType="text|textPassword"
                android:singleLine="true" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- BOTONES ENVIAR VOLVER -->
        <LinearLayout
            android:id="@+id/createUserButtonsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25sp"
            android:orientation="horizontal">

            <!-- ENVIAR -->
            <Button
                android:id="@+id/createUserSendButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="20sp"
                android:layout_weight="1"
                android:width="150sp"
                android:onClick="buttonLogin"
                android:text="@string/createUserSendText" />
            <!-- VOLVER -->
            <Button
                android:id="@+id/createUserReturnButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20sp"
                android:layout_weight="1"
                android:width="150sp"
                android:onClick="buttonRegisterUser"
                android:text="@string/createUserReturnText"
                app:strokeColor="@color/colorPrimaryDark" />

        </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>